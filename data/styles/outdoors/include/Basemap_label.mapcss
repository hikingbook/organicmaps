/* Keep here changes of the base map style file only. */
@import("../../default/include/Basemap_label.mapcss");


/* 9. ISOLINES */

line[isoline]
{text-position: line;}

line|z12-[isoline=step_1000],
{text:name;font-size: 10;fill-opacity: 0.7;text-color: @label_isoline1000;}

line|z13-[isoline=step_500],
{text:name;font-size: 10;fill-opacity: 0.7;text-color: @label_isoline500;}

line|z15-[isoline=step_100],
{text:name;font-size: 10;fill-opacity: 0.7;text-color: @label_isoline100;}

line|z15-[isoline=step_50],
line|z15-[isoline=zero],
{text:name;font-size: 10;fill-opacity: 0.7;text-color: @label_isoline50;}

line|z16-[isoline=step_10],
{text:name;font-size: 8;fill-opacity: 0.6;text-color: @label_isoline10;}
